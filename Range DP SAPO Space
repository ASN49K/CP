#include <bits/stdc++.h>
#define all(x)      x.begin(),x.end()
#define bug(x)      cerr<<" ( "<<#x<<' '<<x<<"  )\n"
#define pb          push_back
using namespace std;
const int inf=1e9;
using i64=long long;
int main()
{
    string s;
    cin>>s;
    int n=(int)s.size();
    vector<vector<int>>dp(n+1,vector<int>(n,0));
    for(int l=n-1;l>=0;l--)
    {
        dp[l][l]=1;
        for(int r=l+1;r<n;r++)
        {
            dp[l][r]=dp[l+1][r-1]+2*(s[l]!=s[r]);
            for(int k=l;k<r;k++)
            {
                dp[l][r]=min(dp[l][r],dp[l][k]+dp[k+1][r]);
            }
        }
    }
    cout<<dp[0][n-1];
}
