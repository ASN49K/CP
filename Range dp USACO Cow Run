#include <bits/stdc++.h>
using namespace std;
#define all(x) x.begin(),x.end()
#define pb push_back
#define bug(x) cerr<<#x<<" ( "<<x<<endl
using i64=long long;
const int inf=1e9;
int main()
{
    ifstream cin("cowrun.in");
    ofstream cout("cowrun.out");
    int n;
    cin>>n;
    vector<int>poz(n);
    for(auto &c:poz)
    {
        cin>>c;
    }
    sort(all(poz));
    vector<vector<vector<int>>>dp(n,vector<vector<int>>(n,vector<int>(2,inf)));
    for(int i=0;i<n;i++)
    {
        dp[i][i][0]=dp[i][i][1]=abs(poz[i])*n;
    }
    for(int len=1;len<n;len++)
    {
        for(int l=0,r=len;r<n;l++,r++)
        {
            int remain=n-r+l;
            dp[l][r][0]=min(dp[l+1][r][0]+(poz[l+1]-poz[l])*remain , dp[l+1][r][1]+(poz[r]-poz[l])*remain);
            dp[l][r][1]=min(dp[l][r-1][1]+(poz[r]-poz[r-1])*remain , dp[l][r-1][0]+(poz[r]-poz[l])*remain);
        }
    }
    cout<<min(dp[0][n-1][0],dp[0][n-1][1]);
}
