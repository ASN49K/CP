#include <bits/stdc++.h>
using namespace std;
#define all(a)  a.begin(),a.end()
#define pb      push_back
using i64=long long;
using u64=unsigned long long;
const i64 INF=1e18;
const int mod=1e9+7;
main()
{
    int n,m,k;
    cin>>n>>m>>k;
    vector<bool>ok1(n,false),ok2(n,false);
    for(int i=0;i<m;i++)
    {
        int x,y;
        cin>>x>>y;
        ok1[x]=true;
        ok2[y-1]=true;
    }
    vector<int>dp(k+1,0);
    dp[0]=1;
    vector<int>sum(k+1,1);

    bool look_for_small=false;
    for(int i=0;i<n;i++)
    {
        look_for_small|=ok1[i];
        if(ok2[i])
        {
            look_for_small=false;
        }
        for(int j=k;j;j--)
        {
            if(ok2[i])
            {
                dp[j]=sum[j-1];
            }
            else if(!look_for_small)
            {
                dp[j]=((1LL*dp[j]*j)%mod+sum[j-1])%mod;
            }
            else
            {
                dp[j]=(1LL*dp[j]*j)%mod;
            }
        }
        dp[0]=0;
        sum[0]=0;
        for(int j=1;j<=k;j++)
        {
            sum[j]=(sum[j-1]+dp[j])%mod;
        }
    }
    cout<<sum[k];

}
